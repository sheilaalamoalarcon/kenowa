            >A purple square with rounded corners and the letters CSS inside in
            white</desc
          >
          <path {...cssPathBackgroundProps}></path>
          <path {...cssPathLettersProps}></path>
        </svg>
      </figure>
    </section>
    <iframe {...iframeProps}></iframe>
    <section class="dev-information">
      {
        developerInfo.map((info) => (
          <Card title={info.title} subtitle={info.platform} href={info.href} />
        ))
      }
    </section>
  </main>
  <Footer />
</Layout>
