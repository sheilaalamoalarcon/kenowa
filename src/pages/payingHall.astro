---
import Layout from "../layouts/Layout.astro";
import Header, { HeaderTypeEnum } from "../components/Header.astro";
import ProductCard from "../components/ProductCard.astro";
import CustomButton from "../components/CustomButton";
import Footer from "../components/Footer.astro";
---

<Layout title="Paying Hall">
  <main class="main">
    <Header headerType={HeaderTypeEnum.USER} />
    <div id="paying-hall-content">
      <div id="selected-products-container">
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
        <ProductCard
          src="/public/stock-image-aiony-haust.svg"
          title="test"
          subtitle="test"
        />
      </div>
      <div id="paying-hall-information">
        <div id="user-header">
          <img
            src="/public/stock-image-aiony-haust.svg"
            alt="user-header-img"
            id="user-header-img"
          />
          <p id="user-header-text">Madelyn Vaccaro</p>
        </div>
        <div id="paying-details-container">
          <div class="row">
            <p id="subtotal">Subtotal</p><p id="subtotal-price">131.95€</p>
          </div>
          <div class="row">
            <p id="total">Total</p><p id="total-price">131.95€</p>
          </div>
          <p id="accepted-paying-mode">MÉTODO DE PAGO ACEPTADO</p>
          <CustomButton title="Pay" />
        </div>
      </div>
    </div>
    <Footer />
  </main>
  <style>
    .main {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 4.625rem;
      flex-shrink: 0;
    }
    #paying-hall-content {
      display: flex;
      padding: 0rem 1.875rem;
      justify-content: space-between;
      align-items: flex-start;
      align-self: stretch;
    }
    #selected-products-container {
      display: grid;
      grid-template-columns: 23% 23% 23% 23%;

      justify-content: space-between;
      align-items: center;
    }
    #paying-hall-information {
      display: flex;
      width: 20.9375rem;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 13.125rem;
    }
    #user-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      align-self: stretch;
    }
    #user-header-img {
      width: 6.25rem;
      height: 6.25rem;

      border-radius: 100%;
      background: url(<path-to-image>) lightgray 50% / cover no-repeat;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

      object-fit: cover;
      object-position: top;
    }
    #user-header-text {
      color: var(--PURE_BLACK, #0d0708);
      text-align: center;

      /* HEADING_5 */
      font-size: 1.25rem;
      font-style: normal;
      font-weight: 400;
      line-height: 110%; /* 1.375rem */
    }
  </style>
</Layout>
