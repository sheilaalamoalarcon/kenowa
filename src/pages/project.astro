---
import Description from "@/components/Description.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Project">
  <Header />
  <main class="flex flex-col p-6 px-16">
    <h1 class="main-title text-start" style="font-size:x-large;">
      {t("project.title")}
    </h1>
    <Description />

    <h2 class="main-title">Logo</h2>

    <figure class="flex flex-col gap-20 md:flex md:flex-row">
      <Image
        width={100}
        height={100}
        src="/project/bigLogoWhite.png"
        alt="Big logo design in white"
        loading="lazy"
        class="bg-black p-6 px-16 w-full"
      />
      <Image
        width={100}
        height={100}
        src="/project/bigLogoBlack.png"
        alt="Big logo design in black"
        loading="lazy"
        class="bg-white p-6 px-16 w-full"
      />
    </figure>

    <figure class="flex flex-col gap-20 md:flex md:flex-row">
      <Image
        width={100}
        height={100}
        src="/project/smallLogoWhite.png"
        alt="Small logo design in white"
        loading="lazy"
        class="bg-black p-6 px-16 w-full"
      />
      <Image
        width={100}
        height={100}
        src="/project/smallLogoBlack.png"
        alt="Small logo design in black"
        loading="lazy"
        class="bg-white p-6 px-16 w-full"
      />
    </figure>

    <figure class="flex flex-col md:flex md:flex-row">
      <Image
        width={100}
        height={100}
        src="/project/colorPalette.png"
        alt="final color palette"
        class="bg-white p-6 px-16 w-96 aspect-auto"
        loading="lazy"
      />
      <Image
        width={100}
        height={100}
        src="/project/types.png"
        alt="final chosen types"
        class="bg-white p-6 px-16 w-96 aspect-auto"
        loading="lazy"
      />
    </figure>
  </main>
  <Footer />
</Layout>
