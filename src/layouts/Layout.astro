---
import Head from "@/components/Head.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Anton&family=Anton+SC&display=swap");
  @font-face {
    font-family: "Anton";
    src: url("/fonts/AntonSC-Regular.ttf") format("ttf");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  :root {
    --light-yellow: rgba(254, 222, 113, 1);
    --tangerine: rgba(249, 160, 62, 1);
    --dark-brown: rgba(69, 54, 47, 1);
    --orange: rgba(243, 99, 55, 1);
    --dark-red: rgba(229, 69, 67, 1);
    --bright-green: rgba(92, 230, 97, 1);
    --cyan: rgba(66, 245, 155, 1);
    --white: rgba(245, 250, 249, 1);
    --black: rgba(13, 7, 8, 1);
    --pure-white: rgba(250, 250, 250, 1);
    --pure-black: rgba(0, 0, 0, 1);
    --accent: 136, 58, 234;
    --text-light: --dark-brown;
    --text-dark: --white;
    --background-light: --white;
    --background-dark: --dark-brown;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family:
      "Anton",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
