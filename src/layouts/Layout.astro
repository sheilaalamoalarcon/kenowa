---
import Head from "@/components/Head.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Anton&family=Anton+SC&display=swap");
  @font-face {
    font-family: "Anton";
    src: url("/fonts/AntonSC-Regular.ttf") format("ttf");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  :root {
    --text: rgba(69, 54, 47, 1);
    --secondary: rgba(69, 54, 47, 1);
    --primary: rgba(249, 160, 62, 1);
    --terciary: rgba(254, 222, 113, 1);
    --orange: rgba(243, 99, 55, 1);

    --white: rgba(245, 250, 249, 1);
    --black: rgba(13, 7, 8, 1);
    --transparent: rgba(250, 250, 250, 0);

    --red: rgba(229, 69, 67, 1);
    --dark-red: rgba(128, 67, 66, 1);
    --soft-red: rgba(229, 70, 67, 0.24);

    --yellow: rgb(229, 186, 67);
    --dark-yellow: rgb(161, 128, 36);
    --soft-yellow: rgba(229, 186, 67, 0.24);

    --green: rgb(67, 229, 91);
    --dark-green: rgb(67, 128, 91);
    --soft-green: rgba(67, 229, 91, 0.24);

    --blue: rgb(67, 151, 229);
    --dark-blue: rgb(67, 97, 128);
    --soft-blue: rgba(67, 151, 229, 0.24);

    /*/roundness/*/
    --Corner-Extra-small: 0.25rem;
    --Corner-Full: 62.5rem;
  }
  html {
    font-family:
      "Anton",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  .card-renderer {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: space-between;

    padding: 10dvh 5dvw;
    gap: 24dvh;
  }
  .main-title {
    color: var(--orange, #f36337);
    text-align: center;
    text-transform: capitalize;

    /* HEADING_3 */
    font-size: larger;
    font-style: normal;
    font-weight: 400;
    line-height: 110%; /* 2.2rem */
  }
  .body {
    color: var(--text, #45362f);

    /* BODY_BIG_REGULAR */
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-size: medium;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .uiFont {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  @media (min-width: 500px) and (max-width: 991px) {
    .card-renderer {
      display: flex;
      flex-direction: column;
      padding: 10dvh 5dvw;
      gap: 24dvh;
    }
    .row {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
    }
  }
  .row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
  }
</style>
