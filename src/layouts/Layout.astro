---
import Head from "@/components/Head.astro";
import { getLangFromUrl } from "@/i18n/utils";
interface Props {
  title: string;
}

const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <Head title={title} />
  <body class="h-dvh">
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Anton&family=Anton+SC&display=swap");
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  @font-face {
    font-family: "Anton";
    src: url("/fonts/AntonSC-Regular.ttf") format("ttf");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  * {
    box-sizing: border-box;
  }

  @layer base {
    html {
      @apply font-sans text-black dark:bg-stone-900 text-white;
    }

    body {
      @apply grid h-full grid-rows-[auto,1fr,auto];
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --dark-red: rgba(128, 67, 66, 1);
        --soft-red: rgba(229, 70, 67, 0.24);

        --dark-yellow: rgb(161, 128, 36);
        --soft-yellow: rgba(229, 186, 67, 0.24);

        --dark-green: rgb(67, 128, 91);
        --soft-green: rgba(67, 229, 91, 0.24);

        --dark-blue: rgb(67, 97, 128);
        --soft-blue: rgba(67, 151, 229, 0.24);
      }
    }
    @media (prefers-color-scheme: light) {
      :root {
        --dark-red: rgba(128, 67, 66, 1);
        --soft-red: rgba(229, 70, 67, 0.24);

        --dark-yellow: rgb(161, 128, 36);
        --soft-yellow: rgba(229, 186, 67, 0.24);

        --dark-green: rgb(67, 128, 91);
        --soft-green: rgba(67, 229, 91, 0.24);

        --dark-blue: rgb(67, 97, 128);
        --soft-blue: rgba(67, 151, 229, 0.24);
      }
    }
  }

  @layer components {
    .main-title {
      @apply text-orange-500 text-center capitalize text-lg;
      /*add font anton */
    }

    .body {
      @apply text-black font-sans text-sm dark:text-white;
    }
  }
</style>
