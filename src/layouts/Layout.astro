---
import { getLangFromUrl } from "@/i18n/utils";
interface Props {
  title: string;
}

const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Social platform dedicated to fashion" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <meta name="description" content="Welcome to my new Astro site!" />

    <!-- Web analytics -->
    <script
      data-goatcounter="https://my-account.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"></script>

    <!-- Open Graph tags -->
    <meta property="og:title" content="My New Astro Website" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.example.com/" />
    <meta property="og:description" content="Welcome to my new Astro site!" />
    <meta
      property="og:image"
      content="https://www.example.com/_astro/seo-banner.BZD7kegZ.webp"
    />
    <meta property="og:image:alt" content="" />
  </head>

  <body class="h-dvh">
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Anton&family=Anton+SC&display=swap");
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  * {
    box-sizing: border-box;
  }

  @layer base {
    html {
      @apply font-sans text-black dark:bg-stone-900 text-white;
    }

    body {
      @apply grid h-full grid-rows-[auto,1fr,auto];
    }
  }

  @layer components {
    .title {
      @apply text-5xl font-extrabold text-stone-700 dark:text-stone-50;
    }
    .main-title {
      @apply text-orange-500 text-center capitalize text-lg;
    }
    .body {
      @apply text-black font-sans text-sm dark:text-white;
    }
    .header {
      @apply flex flex-col gap-4 sticky top-0 items-center bg-orange-600 
           shadow-md p-6 px-16 h-fit sm:flex-row justify-between 
           dark:bg-stone-800;
    }
    .header__nav-link {
      @apply flex w-fit justify-center items-center gap-1 
           text-white text-center font-normal capitalize text-xs 
           dark:text-white hover:text-orange-200;
    }
    .post-group-base {
    }
    .card {
      @apply flex flex-col justify-between h-64 aspect-square rounded p-12 bg-stone-400/10 shadow-xl drop-shadow-sm;
    }
    .appear-enter {
      @apply opacity-0 translate-y-4 transition-all duration-500;
    }
    .subtitle {
      @apply mt-4 text-3xl text-start sm:text-4xl font-extrabold tracking-tight text-stone-900 dark:text-stone-50;
    }
  }
</style>
