---
import type { CParagraph } from "@/constants/classes";

interface Props extends CParagraph {}

const { title, description, subtitle } = Astro.props;
---

<div class="container">
  <p class="title">{title}</p>
  <p class="subtitle">{subtitle}</p>
  <p class="text">{description}</p>
</div>
<style>
  @media (max-width: 700px) /*/mobile size*/ {
  }
  @media (max-width: 991px) {
  }
  @media (min-width: 992px) {
    .container {
      display: flex;
      width: 19rem;
      flex-direction: column;
    }
    .title {
      color: var(--PRIMARY, #f36337);
      text-align: center;

      /* HEADING_3 */
      font-size: 2rem;
      font-style: normal;
      font-weight: 400;
      line-height: 110%; /* 2.2rem */
    }
    .text {
      color: var(--TEXT, #45362f);
      text-align: center;
      /* BODY_BIG_REGULAR */
      font-size: 1rem;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
  }
</style>
