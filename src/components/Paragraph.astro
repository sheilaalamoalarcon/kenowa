---
import type { CParagraph } from "@/constants/classes";

interface Props extends CParagraph {}

const { title, description } = Astro.props;
---

<section class="container">
  <h4 class="title">{title}</h4>
  <p class="text">{description}</p>
</section>
<style>
  @media (max-width: 700px) /*/mobile size*/ {
  }
  @media (max-width: 991px) {
  }
  @media (min-width: 992px) {
    .container {
      display: flex;
      width: 19rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 2.25rem;
    }
    .title {
      color: var(--PRIMARY, #f36337);
      text-align: center;

      /* HEADING_3 */
      font-size: 2rem;
      font-style: normal;
      font-weight: 400;
      line-height: 110%; /* 2.2rem */
    }
    .text {
      color: var(--TEXT, #45362f);
      text-align: center;
      /* BODY_BIG_REGULAR */
      font-size: 1rem;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
  }
</style>
