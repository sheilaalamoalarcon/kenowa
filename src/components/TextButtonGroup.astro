---
import TextButton from "@/components/TextButton.astro";

interface ButtonProps {
  value: string;
  title: string;
  disabled: boolean;
  type: "bold" | "italic" | "underlined";
}

interface Props {
  basic: ButtonProps[];
}
const { basic } = Astro.props;
---

<aside id="basic-font-styles" class="textarea-container">
  <div class="post-editor__header">
    {
      basic.map((button) => {
        return (
          <TextButton
            value={button.value}
            disabled={button.disabled}
            title={button.title}
            type={button.type}
          />
        );
      })
    }
  </div>
</aside>
