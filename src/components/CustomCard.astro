<style>
  #card {
    display: flex;
    width: 23.5rem;
    padding: 0.9375rem 1.25rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.625rem;
  }
  #card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  #card-header-image {
    width: 6.25rem;
    height: 6.25rem;
    border-radius: 100%;
    background: url(<path-to-image>) lightgray 50% / cover no-repeat;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
  #card-header-text {
    color: var(--PURE_BLACK, #0d0708);
    text-align: center;

    /* HEADING_5 */
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 400;
    line-height: 110%; /* 1.375rem */
  }
  #card-description {
    align-self: stretch;

    color: var(--TEXT, #45362f);

    /* BODY_BIG_REGULAR */
    font-family: "Anton SC";
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
</style>
