---
import { StylesTypes } from "@/Constants/Enumerations";

export interface TextButtonProps {
  value: string;
  disabled: boolean;
  type: StylesTypes;
}
interface Props extends TextButtonProps {}
const { value, disabled, type = StylesTypes.BOLD } = Astro.props;

const buttonProps = {
  type: "button" as "button",
  value: value,
  id: `font-action-${type}`,
  "aria-label": `change font to ${value}`,
  disabled: disabled,
  class: "post-editor__header-button",
  tabIndex: 0,
};
const buttonIconSize = 24;
const buttonIconProps = {
  width: buttonIconSize,
  height: buttonIconSize,
  viewBox: "0 0 24 24",
  fill: "none",
  "[data-type]": type,
};
---

{
  type === StylesTypes.BOLD && (
    <button {...buttonProps}>
      <svg {...buttonIconProps}>
