  type === StylesTypes.UNDERLINE && (
    <button {...buttonProps}>
      <svg {...buttonIconProps}>
        <path
          d="M7 19V17.4444H18V19H7ZM12.5 15.8889C11.1774 15.8889 10.1494 15.4806 9.41607 14.6639C8.68274 13.8472 8.31607 12.7648 8.31607 11.4167V5H10.3393V11.5333C10.3393 12.2593 10.5226 12.8491 10.8893 13.3028C11.256 13.7565 11.7929 13.9833 12.5 13.9833C13.2071 13.9833 13.744 13.7565 14.1107 13.3028C14.4774 12.8491 14.6607 12.2593 14.6607 11.5333V5H16.6839V11.4167C16.6839 12.7648 16.3173 13.8472 15.5839 14.6639C14.8506 15.4806 13.8226 15.8889 12.5 15.8889Z"
