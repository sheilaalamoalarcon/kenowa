---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Social platform dedicated to fashion" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <ViewTransitions />
  <link
    rel="preload"
    href="/fonts/AntonSC-Regular.ttf"
    as="font"
    type="font/ttf"
    crossorigin
  />
</head>
