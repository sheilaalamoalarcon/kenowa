---
import Image from "astro/components/Image.astro";

export enum ImagesSourceEnum {
  STOCK_IMAGE_1 = "/stock-image-katsiaryna-endruszkiewicz.svg",
  STOCK_IMAGE_2 = "/stock-image-dom-hill.svg",
  STOCK_IMAGE_3 = "/stock-image-ave-calvar.svg",
  STOCK_IMAGE_4 = "/stock-image-aiony-haust.svg",
}
export interface CastleImage {
  src: ImagesSourceEnum;
  isRound: boolean;
}
interface Props {
  images: CastleImage[];
}

const { images } = Astro.props;
---

<div class="horizontal-images-group">
  {
    images.map((image: CastleImage) => (
      <Image
        width={288}
        height={489}
        loading={"lazy"}
        src={image.src}
        alt={image.src.slice(3)}
        id={image.isRound ? "image_round" : "image_rectangle"}
        class="shadow"
      />
    ))
  }
</div>

<style>
  @media (max-width: 700px) /*/mobile size*/ {
    .horizontal-images-group {
      flex-direction: column;
      height: fit-content;
    }
    .shadow:nth-child(3) {
      display: none;
    }
    .shadow:last-child {
      display: none;
    }
  }
  .horizontal-images-group {
    display: flex;
    align-self: stretch;
    padding: 4.375rem 3.125rem;
    justify-content: space-between;
    align-items: center;

    background: var(--TEXT, #45362f);
  }
  .shadow {
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    object-fit: cover;
    max-height: 30.5625rem;
    aspect-ratio: 18/30;
  }
  #image_round {
    border-radius: var(--Corner-Full, 62.5rem) var(--Corner-Full, 62.5rem) 0rem
      0rem;
  }
  #image_rectangle {
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }
</style>
