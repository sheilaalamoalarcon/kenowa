---
import Image from "astro/components/Image.astro";

interface Props {
  src: string;
  text: string;
}
const { src, text } = Astro.props;
---

<div id="user-header">
  <Image
    width={100}
    height={100}
    loading={"lazy"}
    src={src}
    alt="user-header"
    id="user-header-img"
  />
  <p id="user-header-text">{text}</p>
  <style>
    #user-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      align-self: stretch;
    }
    #user-header-img {
      width: 6.25rem;
      height: 6.25rem;

      border-radius: 100%;
      background: url(<path-to-image>) lightgray 50% / cover no-repeat;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

      object-fit: cover;
      object-position: top;
    }
    #user-header-text {
      color: var(--PURE_BLACK, #0d0708);
      text-align: center;

      /* HEADING_5 */
      font-size: 1.25rem;
      font-style: normal;
      font-weight: 400;
      line-height: 110%; /* 1.375rem */
    }
    @media (max-width: 700px) {
      #user-header-img {
        width: 6.25rem;
        height: 6.25rem;

        border-radius: 100%;
        background: url(<path-to-image>) lightgray 50% / cover no-repeat;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

        object-fit: cover;
        object-position: top;
      }
      #user-header-text {
        color: var(--PURE_BLACK, #0d0708);
        text-align: center;

        /* HEADING_5 */
        font-size: 1.25rem;
        font-style: normal;
        font-weight: 400;
        line-height: 110%; /* 1.375rem */
      }
    }
  </style>
</div>
