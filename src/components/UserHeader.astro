---
import Image from "astro/components/Image.astro";

interface Props {
  src: string;
  text: string;
}
const { src, text } = Astro.props;
---

<div id="container">
  <Image
    width={100}
    height={100}
    loading={"eager"}
    src={src}
    alt="container"
    id="img"
  />
  <p id="text">{text}</p>
  <style>
    #container {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
    }
    #img {
      width: 100%;
      aspect-ratio: 1 / 1;
      background: url(<path-to-image>) lightgray 50% / cover no-repeat;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
      border-radius: var(--Corner-Medium, 0.75rem);
      object-fit: cover;
      object-position: top;
    }
    #text {
      color: var(--PURE_BLACK, #0d0708);
      text-align: center;

      /* HEADING_5 */
      font-size: 1.25rem;
      font-style: normal;
      font-weight: 400;
      line-height: 110%; /* 1.375rem */
    }
    @media (min-width: 500px) and (max-width: 991px) {
      #text {
        color: var(--PURE_BLACK, #0d0708);
        text-align: center;

        /* HEADING_5 */
        font-size: 1.25rem;
        font-style: normal;
        font-weight: 400;
        line-height: 110%; /* 1.375rem */
      }
    }
    @media (min-width: 992px) {
    }
  </style>
</div>
