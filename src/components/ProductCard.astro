---
import Image from "astro/components/Image.astro";
import Arrow from "./Arrow.astro";

interface Props {
  src: string;
  title: string;
  subtitle: string;
  horizontal?: boolean;
}
const { src, title, subtitle, horizontal } = Astro.props;
const productCardClass = horizontal ? "product-card-big" : "product-card";
---

<div id={productCardClass}>
  <Image
    width={880}
    height={100}
    loading={"eager"}
    src={src}
    alt={productCardClass}
    id=`${productCardClass}-image`
  />
  <p id=`${productCardClass}-text`>{title}</p>
  <p id=`${productCardClass}-additional-text`>{subtitle}</p>
  {horizontal && <Arrow color="#FEDE71" width={"100%"} />}
</div>
<style>
  #product-card {
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: flex-start;
    /* gap: 0.625rem; */
    /* border-radius: 0.8125rem; */
  }
  #product-card-image {
    width: 100%;
    aspect-ratio: 1/1;
    border-radius: var(--Corner-Medium, 0.75rem);
    background:
      url(<path-to-image>) lightgray 50% / cover no-repeat,
      var(--ERROR, #e54543);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

    object-fit: cover;
  }
  #product-card-text {
    align-self: stretch;

    color: var(--TEXT, #45362f);

    /* BODY_BIG_REGULAR */
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  #product-card-additional-text {
    color: var(--PRIMARY, #f36337);
    text-align: center;
    font-size: 0.75rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  #product-card-big {
    display: flex;
    padding: 0.9375rem 1.25rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 2.25rem;

    border-radius: var(--Corner-Medium, 0.75rem);
  }
  #product-card-big-image {
    height: 21rem;
    min-height: 21rem;
    align-self: stretch;
    width: 100%;

    border-radius: var(--Corner-Medium, 0.75rem);
    background: url(<path-to-image>) lightgray 50% / cover no-repeat;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

    object-fit: cover;
  }
  #product-card-big-text {
    color: var(--PRIMARY, #f36337);
    text-align: center;

    /* HEADING_5 */
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 400;
    line-height: 110%; /* 1.375rem */
  }
  #product-card-big-additional-text {
    align-self: stretch;
    color: var(--TEXT, #45362f);

    /* BODY_BIG_REGULAR */
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
</style>
